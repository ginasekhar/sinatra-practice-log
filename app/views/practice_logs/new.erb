<header>
<h2>Create New Practice Log</h2>
</header>

<%= @error %>
<% if logged_in? %>
  <form action='/practice_logs' method="post">
    <label for="day"> Day: </label>
    <input type="text" name="day"><br>
    <br>
    <label for="month"> Month: </label>
    <input type="text" name="month"><br>
    <br>
    <label for="year"> Year: </label>
    <input type="text" name="year"><br>
    <br>
    <label for="practice_minutes"> Minutes Practiced: </label>
    <input type="text" name="practice_minutes"><br>
    <br>
    <label for="notes"> Notes (brief notes on what you worked on, what your next steps are): </label>
    <input type="text" name="notes"><br>
    <br>

    <input type="submit" value="submit" id="submit">

  </form>

  <% else %>
      <h1> You Must Be Logged in to Create a Practice Log </h1>
  <% end %>
